{
  "name": "@egregore/pi-agent",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "deploy": "npm run build && sudo cp ../../infra/systemd/pi-agent.service /etc/systemd/system/ && sudo systemctl daemon-reload && sudo systemctl restart pi-agent",
    "db:init": "tsx src/db/init.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@egregore/shared": "workspace:*",
    "hono": "^4.0.0",
    "@hono/node-server": "^1.4.0",
    "sqlite3": "^5.1.6",
    "better-sqlite3": "^9.3.0",
    "pdf-parse": "^1.1.1",
    "tesseract.js": "^5.0.4",
    "zod": "^3.22.4",
    "dotenv": "^16.3.1",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/better-sqlite3": "^7.6.8",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  }
}